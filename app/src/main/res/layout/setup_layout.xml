<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textAppearance="?android:textAppearanceLarge"
            android:id="@+id/settings_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect to Pi" />
        <TextView
            android:textAppearance="?android:textAppearanceMedium"
            android:id="@+id/webiopi_host_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hostname or IP Address" />
        <EditText
            android:id="@+id/webiopi_host"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textUri">
            <requestFocus />
        </EditText>
        <TextView
            android:textAppearance="?android:textAppearanceMedium"
            android:id="@+id/webiopi_port_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Port (default:8000)" />
        <EditText
            android:id="@+id/webiopi_port"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <TextView
            android:textAppearance="?android:textAppearanceMedium"
            android:id="@+id/webiopi_user_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username:" />
        <EditText
            android:id="@+id/webiopi_user"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />
        <TextView
            android:textAppearance="?android:textAppearanceMedium"
            android:id="@+id/webiopi_pass_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password" />
        <EditText
            android:id="@+id/webiopi_pass"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/settings_save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Settings" />
    </LinearLayout>

</ScrollView>